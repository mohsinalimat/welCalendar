/**index.wxss**/

.title {
    text-align: center;
    /* line-height: 88rpx; */
    color: #272a14;
    font-size: 36rpx;
    margin: 20rpx 0;
}

.title .style0 {
    font-size: 30rpx;
}
.action-wrap {
    display: flex;
    margin-bottom: 20rpx;
}

.line-wrap {
    display: flex;
    flex-wrap: wrap;
    width: 714rpx;
    /* border-right: 2rpx solid #AFAAA5; */
}

.item {
    width: 100rpx;
    height: 100rpx;
    border-left: 2rpx solid #afaaa5;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-bottom: 2rpx solid #afaaa5;
    font-size: 30rpx;
    font-weight: 400;
    color: #272a14;
}
.item .large {
    font-weight: 500;
    font-size: 32rpx;
}

.item .small {
    font-size: 24rpx;
}

.item.first .small {
    border-bottom: 4rpx solid red;
}

.item.holiday {
    background: rgba(246, 183, 156, 0.6);
}

.item.holiday .small {
    color: rgb(248, 99, 94);
    font-weight: 500;
}

.item.style1 {
    background: #fff3eb;
}

.item.style2 {
    background: #FAE6AC;
}

